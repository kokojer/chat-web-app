{
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["node", "@types/node"],
    "declaration": true,
    "composite": true,
    "outDir": "./dist",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}